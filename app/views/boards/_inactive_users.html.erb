<div class="users clearfix" id="inactive-users">
  <% @inactive_users.each do |user| %>
    <%= image_tag user.avatar, :class => 'user photo', :id => "user_#{user.id}" %>
  <% end %>
  <h3>
    <% if @inactive_users.size == 0 %>
      Nobody is
    <% elsif @inactive_users.size == 1 %>
      is
    <% else %>
      are
    <% end %>
    slacking off.
  </h3>
</div>
