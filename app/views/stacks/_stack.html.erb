<li class="stack" id="<%= "stack_#{card.id}" %>">
  <% card.tasks.each do |task| %>
    <%= render 'stacks/card', :card => task %>
  <% end %>

  <%= render 'stacks/card', :card => card %>

  <div class="users" id="<%= "for_card_id_#{card.id}" %>">
    <% card.users.each do |user| %>
      <%= image_tag avatar_url(user), :class => 'user photo', :id => "user_#{user.id}" %>
    <% end %>
  </div>

  <% if card.tasks.any? %>
    <% if card.tasks.complete.size > 0 %>
      <% progress = card.tasks.complete.size == card.tasks.size ? 'done' : 'in-progress' %>
    <% end %>
    <span class="progress <%= progress if progress %>">
      <%= "#{card.tasks.complete.size}/#{card.tasks.size}"%>
    </span>
  <% end %>
</li>
